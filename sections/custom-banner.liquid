{% schema %}
{
  "name": "Custom Banner with Popup",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "top_message",
      "label": "Top Message",
      "default": "Find the perfect gift to surprise your loved ones."
    },
    {
      "type": "text",
      "id": "top_button_text",
      "label": "Top Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "textarea",
      "id": "popup_content",
      "label": "Popup Content",
      "default": "Your popup message or HTML goes here!"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Main Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Celebrate the season with our exclusive Holiday Gift Guide. From timeless classics to unique treasures, find thoughtful gifts that bring joy to everyone on your list."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Consciously crafted fashion for every body – sizes XXS to 6XL"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner with Popup"
    }
  ]
}
{% endschema %}

<section class="custom-banner" style="background-image: url({{ section.settings.background_image | image_url }});">
  <div class="banner-top">
    <div class="logo">{{ section.settings.logo_text }}</div>
    <div class="top-message">{{ section.settings.top_message }}</div>
    <button class="top-btn" id="popup-trigger">
      {{ section.settings.top_button_text }} →
    </button>
  </div>

  <div class="banner-content">
    <h1 class="banner-title">{{ section.settings.title }}</h1>
    <p class="banner-subtitle">{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.cta_link }}" class="cta-btn">
      {{ section.settings.cta_text }} →
    </a>
  </div>

  <div class="banner-footer">
    {{ section.settings.footer_text }}
  </div>
</section>

<!-- Popup -->
<div class="popup-overlay" id="popup-overlay">
  <div class="popup-box">
    <button class="popup-close" id="popup-close">×</button>
    <div class="popup-content">
      {{ section.settings.popup_content }}
    </div>
  </div>
</div>

<style>
.custom-banner {
  position: relative;
  width: 100%;
  height: 100vh;
  background-size: cover;
  background-position: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20px;
  box-sizing: border-box;
  color: #111;
  font-family: 'Arial', sans-serif;
}

.banner-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  font-size: 24px;
  font-weight: 700;
  letter-spacing: 1px;
}

.top-message {
  flex: 1;
  text-align: center;
  font-size: 15px;
  font-weight: 500;
}

.top-btn {
  background: #FFD700;
  padding: 10px 22px;
  font-weight: bold;
  border-radius: 30px;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}
.top-btn:hover {
  background: #111;
  color: #fff;
}

.banner-content {
  text-align: center;
  margin-top: auto;
  margin-bottom: auto;
}

.banner-title {
  font-size: 54px;
  font-weight: 800;
  margin-bottom: 15px;
}

.banner-subtitle {
  max-width: 650px;
  margin: 0 auto 25px;
  font-size: 18px;
  line-height: 1.5;
}

.cta-btn {
  background: #111;
  color: #fff;
  padding: 14px 28px;
  display: inline-block;
  text-decoration: none;
  font-weight: bold;
  border-radius: 30px;
  transition: all 0.3s ease;
}
.cta-btn:hover {
  background: #333;
}

.banner-footer {
  text-align: center;
  font-size: 14px;
  margin-top: 30px;
  font-style: italic;
}

/* Popup */
.popup-overlay {
  display: none;
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.popup-box {
  background: #fff;
  padding: 35px;
  border-radius: 12px;
  max-width: 520px;
  width: 90%;
  position: relative;
  text-align: center;
  animation: fadeIn 0.3s ease;
}

.popup-close {
  position: absolute;
  top: 12px; right: 12px;
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
}

@keyframes fadeIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  var trigger = document.getElementById("popup-trigger");
  var overlay = document.getElementById("popup-overlay");
  var closeBtn = document.getElementById("popup-close");

  trigger.addEventListener("click", function() {
    overlay.style.display = "flex";
  });

  closeBtn.addEventListener("click", function() {
    overlay.style.display = "none";
  });

  overlay.addEventListener("click", function(e) {
    if(e.target === overlay) {
      overlay.style.display = "none";
    }
  });
});
</script>
