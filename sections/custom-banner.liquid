{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Banner Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Your subheading text goes here."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "This is your customizable description."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "banner_bg",
      "label": "Background Image"
    }
  ]
}
{% endschema %}

<section class="Custom-banner" style="background-image: url({{ section.settings.banner_bg | image_url: '1600x' }});">
  <div class="custom-banner__overlay">
    <div class="custom-banner__content">
      <h1 class="custom-banner__heading">{{ section.settings.heading }}</h1>
      <h2 class="custom-banner__subheading">{{ section.settings.subheading }}</h2>
      <p class="custom-banner__description">{{ section.settings.description }}</p>
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="custom-banner__button">
          <span>{{ section.settings.button_text }}</span>
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
.custom-banner {
  position: relative;
  background-size: cover;
  background-position: center;
  height: 100vh; /* full screen height */
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fff;
}

.custom-banner__overlay {
  background: rgba(0, 0, 0, 0.45);
  padding: 50px;
  border-radius: 16px;
  max-width: 800px;
  margin: 0 auto;
}

.custom-banner__heading {
  font-size: 56px;
  font-weight: 700;
  margin-bottom: 20px;
}

.custom-banner__subheading {
  font-size: 30px;
  margin-bottom: 15px;
}

.custom-banner__description {
  font-size: 20px;
  margin-bottom: 30px;
  max-width: 650px;
  margin-left: auto;
  margin-right: auto;
}

/* Button Animation */
.custom-banner__button {
  display: inline-block;
  padding: 16px 40px;
  font-size: 20px;
  font-weight: bold;
  background: #e63946;
  color: #fff;
  border-radius: 50px;
  text-decoration: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.custom-banner__button::before {
  content: "";
  position: absolute;
  left: -100%;
  top: 0;
  width: 100%;
  height: 100%;
  background: #f1faee;
  transition: all 0.4s ease;
  z-index: 0;
}

.custom-banner__button:hover::before {
  left: 0;
}

.custom-banner__button:hover {
  color: #1d3557;
}

.custom-banner__button span {
  position: relative;
  z-index: 1;
}
</style>
