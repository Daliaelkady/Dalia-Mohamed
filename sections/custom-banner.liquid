{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "üéÅ Celebrate the Season with Joy"
    },
    {
      "type": "textarea",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Discover meaningful gifts that bring joy to the ones you cherish most."
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "üå± Consciously crafted fashion, made with care for people and the planet ‚Äî available in sizes XXS to 6XL."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="custom-banner">
  <div class="custom-banner__overlay"></div>
  <div class="custom-banner__content">
    <h1>{{ section.settings.headline }}</h1>
    <p class="subheadline">{{ section.settings.subheadline }}</p>
    <p class="tagline">{{ section.settings.tagline }}</p>
    <a href="{{ section.settings.button_link }}" class="banner-btn">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

<style>
  .custom-banner {
    position: relative;
    width: 100%;
    min-height: 100vh;
    background: url({{ section.settings.background_image | image_url }}) center/cover no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    padding: 2rem;
  }

  .custom-banner__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.4);
  }

  .custom-banner__content {
    position: relative;
    max-width: 800px;
    z-index: 2;
  }

  .custom-banner__content h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    animation: fadeInDown 1s ease-out;
  }

  .custom-banner__content .subheadline {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    animation: fadeInUp 1.2s ease-out;
  }

  .custom-banner__content .tagline {
    font-size: 1rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    animation: fadeInUp 1.4s ease-out;
  }

  .banner-btn {
    display: inline-block;
    background: #ff4d4d;
    color: white;
    padding: 0.9rem 2rem;
    border-radius: 50px;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.3s ease;
    animation: bounceIn 1.6s ease-out;
  }

  .banner-btn:hover {
    background: #e60023;
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }

  @keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes bounceIn {
    0% { transform: scale(0.5); opacity: 0; }
    60% { transform: scale(1.1); opacity: 1; }
    100% { transform: scale(1); }
  }

  @media (max-width: 768px) {
    .custom-banner__content h1 {
      font-size: 2rem;
    }
    .custom-banner__content .subheadline {
      font-size: 1.1rem;
    }
    .custom-banner__content .tagline {
      font-size: 0.9rem;
    }
  }
</style>
