<div class="banner">
    <h1>{{ section.settings.banner_title }}</h1>
    <p>{{ section.settings.banner_description }}</p>
    <button class="banner-button">{{ section.settings.button_text }}</button>
</div>

<style>
    .banner {
        /* Add your styles here */
    }
    .banner-button {
        /* Add button styles and animations */
    }
</style>

{% schema %}
{
    "name": "Banner",
    "settings": [
        {
            "type": "text",
            "id": "banner_title",
            "label": "Banner Title"
        },
        {
            "type": "textarea",
            "id": "banner_description",
            "label": "Banner Description"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text"
        }
    ]
}
{% endschema %}