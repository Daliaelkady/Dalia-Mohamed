{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "MyShop"
    },
    {
      "type": "text",
      "id": "gift_text",
      "label": "Gift Text",
      "default": "üéÅ Holiday Gifts"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Celebrate the season with thoughtful gifts. From timeless classics to unique finds, discover treasures that bring joy to everyone on your list."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 100,
      "default": 40
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="custom-banner">
  {% if section.settings.background_image != blank %}
    <div class="banner-bg" style="background-image: url({{ section.settings.background_image | image_url: width: 1600 }});"></div>
  {% endif %}
  <div class="overlay" style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  
  <div class="banner-content">
    
    {% if section.settings.logo_text != blank %}
      <div class="banner-logo">
        {{ section.settings.logo_text }}
      </div>
    {% endif %}

    {% if section.settings.gift_text != blank %}
      <div class="gift-text">
        {{ section.settings.gift_text }}
      </div>
    {% endif %}
    
    <div class="text-content">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      {% if section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="banner-btn">{{ section.settings.cta_text }}</a>
      {% endif %}
    </div>
  </div>
</section>

<style>
.custom-banner {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fff;
  overflow: hidden;
}

.custom-banner .banner-bg {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
  z-index: 1;
}

.custom-banner .overlay {
  position: absolute;
  inset: 0;
  z-index: 2;
}

.custom-banner .banner-content {
  position: relative;
  z-index: 3;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  padding: 20px;
}

.custom-banner .banner-logo {
  font-size: 2rem;
  font-weight: 800;
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.custom-banner .gift-text {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: #ffd700;
}

.custom-banner h1 {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.custom-banner p {
  font-size: 1.2rem;
  margin-bottom: 1.5rem;
  max-width: 700px;
}

.custom-banner .banner-btn {
  background: #fff;
  color: #000;
  padding: 12px 28px;
  border-radius: 30px;
  font-weight: bold;
  text-transform: uppercase;
  transition: all 0.3s ease-in-out;
}

.custom-banner .banner-btn:hover {
  background: #f44336;
  color: #fff;
  transform: scale(1.05);
}
</style>
