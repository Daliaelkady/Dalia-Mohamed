{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Your Heading Here" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Your Subheading" },
    { "type": "text", "id": "button_text", "label": "Button Text", "default": "Shop Now" },
    { "type": "url", "id": "button_link", "label": "Button Link" }
  ]
}
{% endschema %}

<section class="banner-section">
  <div class="banner-container">
    <h1 class="banner-heading">{{ section.settings.heading }}</h1>
    <p class="banner-subheading">{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="banner-btn">{{ section.settings.button_text }}</a>
  </div>
</section>

<style>
.banner-section {
  text-align: center;
  padding: 100px 20px;
  background: linear-gradient(135deg, #e63946, #457b9d);
  color: #fff;
}
.banner-heading { font-size: 48px; font-weight: bold; margin-bottom: 10px; }
.banner-subheading { font-size: 20px; margin-bottom: 20px; }
.banner-btn {
  padding: 15px 35px;
  background: #f1faee;
  color: #1d3557;
  border-radius: 50px;
  font-weight: bold;
  transition: transform 0.3s ease, background 0.3s ease;
  display: inline-block;
}
.banner-btn:hover {
  background: #a8dadc;
  transform: scale(1.05);
}
@media(max-width:768px){
  .banner-heading { font-size: 28px; }
  .banner-subheading { font-size: 16px; }
}
</style>
