<div class="custom-banner">
  <!-- Top bar with logo, message, and popup button -->
  <div class="banner-top fade-down">
    <div class="logo">✦ {{ section.settings.logo_text }}</div>
    <div class="top-message">★ {{ section.settings.top_message }}</div>
    <button class="top-btn" id="popup-trigger">
      {{ section.settings.top_button_text }} →
    </button>
  </div>

  <!-- Main Banner Text -->
  <div class="banner-content">
    <h1 class="headline fade-up">{{ section.settings.headline }}</h1>
    <p class="subtext fade-up delay-1">{{ section.settings.subtext }}</p>
    <a href="{{ section.settings.cta_link }}" class="cta-btn fade-up delay-2">
      {{ section.settings.cta_text }} →
    </a>
  </div>
</div>

<!-- Popup -->
<div id="popup" class="popup">
  <div class="popup-content">
    <span class="close-btn" id="popup-close">&times;</span>
    <h2>{{ section.settings.popup_title }}</h2>
    <p>{{ section.settings.popup_message }}</p>
    <a href="{{ section.settings.popup_cta_link }}" class="popup-cta">
      {{ section.settings.popup_cta_text }}
    </a>
  </div>
</div>

<style>
.custom-banner {
  position: relative;
  text-align: center;
  color: white;
  background: linear-gradient(135deg, #1e1a2b, #ff69b4);
  padding: 80px 20px;
  overflow: hidden;
}
.banner-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}
.banner-top .logo {
  font-weight: bold;
  font-size: 1.2rem;
}
.banner-top .top-message {
  font-size: 0.95rem;
}
.top-btn {
  background: white;
  color: #ff69b4;
  border: none;
  padding: 8px 16px;
  border-radius: 20px;
  cursor: pointer;
  font-weight: bold;
}
.banner-content .headline {
  font-size: 2.5rem;
  margin-bottom: 10px;
}
.banner-content .subtext {
  font-size: 1.2rem;
  margin-bottom: 20px;
}
.cta-btn {
  background: #ff69b4;
  color: white;
  padding: 12px 24px;
  border-radius: 30px;
  font-weight: bold;
  text-decoration: none;
}
.cta-btn:hover {
  background: #ff85c1;
}

/* Popup styles */
.popup {
  display: none;
  position: fixed;
  z-index: 9999;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
}
.popup-content {
  background: white;
  color: black;
  padding: 30px;
  max-width: 400px;
  margin: 100px auto;
  border-radius: 12px;
  position: relative;
  text-align: center;
}
.close-btn {
  position: absolute;
  top: 10px;
  right: 15px;
  cursor: pointer;
  font-size: 1.5rem;
}
.popup-cta {
  display: inline-block;
  background: #ff69b4;
  color: white;
  padding: 10px 20px;
  border-radius: 25px;
  margin-top: 15px;
  text-decoration: none;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  var popup = document.getElementById("popup");
  var trigger = document.getElementById("popup-trigger");
  var closeBtn = document.getElementById("popup-close");

  trigger.addEventListener("click", function() {
    popup.style.display = "block";
  });
  closeBtn.addEventListener("click", function() {
    popup.style.display = "none";
  });
  window.addEventListener("click", function(e) {
    if (e.target === popup) {
      popup.style.display = "none";
    }
  });
});
</script>

