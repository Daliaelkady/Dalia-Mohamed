<section class="custom-banner" style="background-color: {{ section.settings.bg_color}}; color: {{ section.settings.text_color }};">
    <div class="banner-content">
        <h1>{{ section.settings.title_text | default: "Welcome to Our Store" }}</h1>
        <p>{{ section.settings.subtitle_text | default: "Discover our latest products!"}}</p>
        <a href="{{ section.settings.button_link | default: "/collections/all" }}" class="btn">{{ section.settings.button_link }}</a>
    </div>
</section>    

<style>
.custom-banner {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    height: 400px;
    padding: 0 20px;
    background-color:{{ section.settings.bg-color }};
    color: {{ section.settings.text_color }};
    transition: background 0.3s;
}
.custom-banner h1 {
    font-size: 48px;
    margin-bottom: 30px;
}
.custom-banner p {
    font-size: 20px;
    margin-bottom: 40px;
}
.custom-banner .btn {
    display: inline-block;
    background-color: {{ section.settings.button-bg }};
    color: {{ section.settings.button_text_color }};
    padding: 12px 30px;
    border-radius: 8px;
    font-weight: bold;
    text-decoration: none;
    transition: transform 0.3s, opacity 0.3s;
}
.custom-banner .btn:hover {
    transform: translateY(-3px);
    opacity: 0.85s;
}
@media(max-width: 768px){
    .custom-banner h1{ font-size: 32px; }
    .custom-banner p {font-size: 16px;}
}
</style> 

{% schema %}
{
    "name": "Custom Banner",
    "settings": [
        { "type": "text", "id": "title-text", "label": "Title", "default": "Welcome to Our Store"},
        { "type": "text", "id": "subtitle-text", "label": "subtitle", "default": "Discover our latest products!"},
        { "type": "url", "id": "button_link", "label": "Button Link", "default": "/collections/all"},
        { "type": "text", "id": "button_text", "label": "Button text", "default": "Shop Now"},
        { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#ff69b4"},
        { "type": "color", "id": "text_color", "label": "Text Color", "default": "#ffffff"},
        { "type": "color", "id": "button_bg", "label": "Button Background Color", "default": "#ffffff"},
        { "type": "color", "id": "button_text_color", "label": "Button Text Color", "default": "#ff69b4"},
    ],
    "presets": [{"name": "Custom Banner", "category": "Banner"}]
}
{% endschema %}