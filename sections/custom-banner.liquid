<section class="custom-banner">
  <div class="banner-content">
    <h1>{{ section.settings.brand_name }}</h1>
    <p class="tagline">{{ section.settings.tagline }}</p>
    <a href="{{ section.settings.button_link }}" class="cta-btn">{{ section.settings.button_label }}</a>
    <p class="subtext">{{ section.settings.subtext }}</p>
  </div>
</section>

<section class="gift-guide">
  <div class="content">
    <h2>{{ section.settings.gift_heading }}</h2>
    <p>{{ section.settings.gift_description }}</p>
    <a href="{{ section.settings.gift_button_link }}" class="shop-btn">
      {{ section.settings.gift_button_label }}
      <span class="arrow">â†’</span>
    </a>
  </div>
  <div class="bottom-text">
    {{ section.settings.bottom_text }}
  </div>
</section>

<style>
/* === Banner === */
.custom-banner {
  background: #f1faee; /* light background */
  text-align: center;
  padding: 4rem 2rem;
}

.custom-banner h1 {
  font-size: 2rem; /* smaller header */
  font-weight: bold;
  color: #111;
  margin-bottom: 0.5rem;
}

.custom-banner .tagline {
  font-size: 1rem;
  color: #333;
  margin-bottom: 1.5rem;
}

.custom-banner .cta-btn {
  background: #e63946; /* red button */
  color: #fff;
  padding: 0.8rem 1.6rem;
  text-decoration: none;
  border-radius: 4px;
  font-weight: bold;
  transition: background 0.3s ease;
}

.custom-banner .cta-btn:hover {
  background: #d62828;
}

.custom-banner .subtext {
  font-size: 0.9rem;
  color: #777;
  margin-top: 1rem;
}

/* === Gift Guide === */
.gift-guide {
  text-align: center;
  padding: 3rem 2rem;
  background: #f9f9f9;
}

.gift-guide h2 {
  font-size: 2rem;
  margin-bottom: 1rem;
  font-weight: 700;
  color: #111;
}

.gift-guide p {
  font-size: 1rem;
  margin-bottom: 2rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  color: #444;
}

.gift-guide .shop-btn {
  background: #1d3557;
  color: #fff;
  padding: 0.9rem 1.5rem;
  text-decoration: none;
  border-radius: 4px;
  display: inline-flex;
  align-items: center;
  font-weight: 600;
  transition: all 0.3s ease;
}

.gift-guide .shop-btn:hover {
  background: #457b9d;
  transform: scale(1.05);
}

.gift-guide .shop-btn .arrow {
  margin-left: 10px;
  transition: transform 0.3s ease;
}

.gift-guide .shop-btn:hover .arrow {
  transform: translateX(5px);
}

.gift-guide .bottom-text {
  margin-top: 2rem;
  font-size: 0.85rem;
  color: #d00;
  font-weight: bold;
  text-transform: uppercase;
}
</style>

{% schema %}
{
  "name": "Custom Home Section",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "Dalia DH"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "New Arrivals Just Dropped!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Banner Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Banner Button Link",
      "default": "/"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Banner Subtext",
      "default": "Free shipping on all orders over $50"
    },
    {
      "type": "text",
      "id": "gift_heading",
      "label": "Gift Guide Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "gift_description",
      "label": "Gift Guide Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "gift_button_label",
      "label": "Gift Guide Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "gift_button_link",
      "label": "Gift Guide Button Link",
      "default": "/"
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Small Red Text at Bottom",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Custom Home",
      "category": "Custom"
    }
  ]
}
{% endschema %}
