<section class="custom-banner">
  <div class="banner-container">
    <span class="brand">{{ section.settings.brand_name }}</span>
    <span class="tagline">{{ section.settings.tagline }}</span>
    <a href="{{ section.settings.button_link }}" class="banner-btn">
      {{ section.settings.button_label }}
      <span class="arrow">â†’</span>
    </a>
  </div>
</section>

<style>
.custom-banner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem 2rem;
  border-bottom: 1px solid #e5e5e5;
  background: #fff;
}

.custom-banner .brand {
  font-weight: bold;
  font-size: 1.2rem;
  letter-spacing: 0.5px;
}

.custom-banner .tagline {
  flex-grow: 1;
  text-align: center;
  font-size: 1rem;
  color: #555;
}

.custom-banner .banner-btn {
  background: #ffdd00;
  color: #000;
  padding: 0.8rem 1.2rem;
  border-radius: 4px;
  font-weight: bold;
  text-decoration: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
}

.custom-banner .banner-btn:hover {
  background: #ffc107;
  transform: scale(1.05);
}

.custom-banner .banner-btn .arrow {
  margin-left: 8px;
  transition: transform 0.3s ease;
}

.custom-banner .banner-btn:hover .arrow {
  transform: translateX(5px);
}
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
