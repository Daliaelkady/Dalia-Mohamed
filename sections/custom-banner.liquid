<section class="custom-banner">
  <div class="banner-container">
    <div class="banner-left">
      <span class="brand">{{ section.settings.brand_name }}</span>
    </div>
    <div class="banner-center">
      <span class="tagline">{{ section.settings.tagline }}</span>
    </div>
    <div class="banner-right">
      <a href="{{ section.settings.button_link }}" class="banner-btn">
        {{ section.settings.button_label }}
        <span class="arrow">â†’</span>
      </a>
      <div class="extra-text">
        {{ section.settings.extra_text }}
      </div>
    </div>
  </div>
</section>

<style>
.custom-banner {
  border-bottom: 1px solid #e5e5e5;
  background: #fff;
  padding: 1.2rem 2rem;
}

.custom-banner .banner-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.custom-banner .banner-left .brand {
  font-weight: 600;
  font-size: 1rem; /* smaller brand name */
  letter-spacing: 0.3px;
}

.custom-banner .banner-center .tagline {
  text-align: center;
  font-size: 0.95rem;
  color: #444;
}

.custom-banner .banner-right {
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.custom-banner .banner-btn {
  background: #1d3557; /* deep blue button */
  color: #fff;
  padding: 0.8rem 1.2rem;
  border-radius: 4px;
  font-weight: bold;
  text-decoration: none;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  margin-bottom: 0.5rem;
}

.custom-banner .banner-btn:hover {
  background: #457b9d; /* lighter blue on hover */
  transform: scale(1.05);
}

.custom-banner .banner-btn .arrow {
  margin-left: 8px;
  transition: transform 0.3s ease;
}

.custom-banner .banner-btn:hover .arrow {
  transform: translateX(5px);
}

.custom-banner .extra-text {
  font-size: 0.85rem;
  color: #d00;
  font-weight: bold;
}
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name (Left)",
      "default": "Dalia DH"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline (Center)",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label (Right)",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
